<div class="card shadow mb-4">
  <div class="card-header py-3">
    <!-- Button trigger modal -->
    <button
      type="button"
      class="btn btn-primary"
      data-toggle="modal"
      data-target="#add-modal"
    >
      <i class="fa fa-plus"></i> Add Data
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Name</th>
            <th>Acction</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < category.length; i++) { %>
          <tr>
            <td><%= i +1 %></td>
            <td><%= category[i].name %></td>

            <td>
              <form
                action="/admin/category/<%= category[i].id %>?_method=DELETE"
                method="post"
              >
                <a
                  href="javascript:void()"
                  type="button"
                  class="btn btn-success btn-sm btn-circle button-update"
                  data-id="<%= category[i].id %>"
                  data-name="<%= category[i].name %>"
                  ><i class="fa fa-edit"></i
                ></a>

                <button
                  type="submit"
                  class="btn btn-success btn-sm btn-danger btn-circle"
                >
                  <i class="fa fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
