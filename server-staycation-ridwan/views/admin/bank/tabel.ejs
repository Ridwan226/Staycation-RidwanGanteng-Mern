<div class="card shadow mb-4">
  <div class="card-header py-3">
    <button
      type="button"
      class="btn btn-primary"
      data-toggle="modal"
      data-target="#add-modal"
    >
      <i class="fa fa-plus"></i> Add Data
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Nama Bank</th>
            <th>Nomor Rekening</th>
            <th>Nama Pemilik</th>
            <th>Image</th>
            <th>Acction</th>
          </tr>
        </thead>

        <tbody>
          <% for(let i = 0; i < bank.length; i++) { %>
          <tr>
            <td><%= i +1 %></td>
            <td><%= bank[i].nameBank %></td>
            <td><%= bank[i].nomorRekening %></td>
            <td><%= bank[i].name %></td>
            <td>
              <img
                src="http://localhost:3000/<%= bank[i].imageUrl %>"
                alt="<%= bank[i].imageUrl %>"
                width="20%"
              />
            </td>

            <td>
              <form
                action="/admin/bank/<%= bank[i].id %>?_method=DELETE"
                method="post"
              >
                <a
                  href="javascript:void();"
                  type="button"
                  class="btn btn-success btn-sm btn-circle button-update"
                  data-id="<%= bank[i].id %>"
                  nameBank="<%= bank[i].nameBank %>"
                  data-name="<%= bank[i].name %>"
                  nomorRekening="<%= bank[i].nomorRekening %>"
                  ><i class="fa fa-edit"></i
                ></a>

                <button
                  type="submit"
                  class="btn btn-success btn-sm btn-danger btn-circle"
                >
                  <i class="fa fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
